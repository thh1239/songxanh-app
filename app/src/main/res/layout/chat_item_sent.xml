<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="8dp"
	android:paddingStart="56dp"
	android:paddingEnd="8dp">

	<ImageView
		android:id="@+id/sent_message_image_view"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:adjustViewBounds="true"
		android:scaleType="centerCrop"
		android:background="@android:color/darker_gray"
		android:visibility="gone"
		android:contentDescription="@string/chat_image_content_desc"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:visibility="visible" />

	<TextView
		android:id="@+id/sent_message_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/chat_message_sent_background"
		android:padding="8dp"
		android:textColor="@android:color/white"
		android:textSize="16sp"
		android:includeFontPadding="false"
		android:maxWidth="280dp"
		android:lineSpacingExtra="2dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/sent_message_image_view"
		app:layout_goneMarginTop="0dp"
		tools:text="Đây là tin nhắn của người gửi" />
</androidx.constraintlayout.widget.ConstraintLayout>
