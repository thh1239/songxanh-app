<?xml version="1.0" encoding="utf-8"?>
<!--
  Reorganized nav_graph for SongXanh
  - Grouped by flows: App Entry, Onboarding/Auth, Sign-up Personalization, Home, Profile,
    Workout, Community, Menu/Nutrition, Admin, Dialogs
  - No IDs or destinations changed to avoid breaking references
  - Only order and comments adjusted
-->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
